[Unit]
Description=SMS Doorman
After=network.target

[Service]
Type=simple
User=root
Group=root

Environment=SMS_DOORMAN_CONFIG=/etc/sms-doorman/config.yaml
WorkingDirectory=/opt/sms-doorman
ExecStart=/opt/sms-doorman/venv/bin/python -m sms_doorman.main
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target

